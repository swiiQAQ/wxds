<!--pages/expressSelect/expressSelect.wxml-->
<view class="form-block">
  <view class='form-line'>
    <text>收货人</text>
    <input placeholder='姓名' placeholder-class='placeholder-input'></input>
  </view>
  <view class='form-line'>
    <text>联系电话</text>
    <input placeholder='手机或固话' placeholder-class='placeholder-input'></input>
  </view>
  <view class='form-line link-icon'>
    <text>选择地区</text>
    <!-- <input placeholder='地区信息' placeholder-class='placeholder-input'></input> -->
    <picker mode="region" bindchange="bindRegionChange" value="{{region}}">
      {{region[0]}}, {{region[1]}}, {{region[2]}}
    </picker>
  </view>
  
  <view class='form-line address'>
    <text>详细地址</text>
    <input placeholder='街道门牌信息' placeholder-class='placeholder-input'></input>
  </view>
  <view class='form-line'>
    <text>邮政编码</text>
    <input></input>
  </view>
</view>
<button type='warn' class="medium-btn" form-type='submit'>确认</button>