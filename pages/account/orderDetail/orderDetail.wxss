/* pages/orderDetail/orderDetail.wxss */

.order-list, .express {
  background: #fff;
}

.order-status {
  background: #eb3c19;
  height: 150rpx;
  display: flex;
  padding: 28rpx 30rpx;
  justify-content: space-between;
  color: #fff;
  font-size: 30rpx;
  flex-direction: column;
}

.success {
  margin-right: 20rpx;
}

.sh-info {
  font-size: 24rpx;
  margin: 0 30rpx;
  padding: 30rpx 0 14rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #eaeaea;
}

.sh-info text {
  margin-bottom: 16rpx;
}

.express {
  border-bottom: 1px solid #eaeaea;
  margin-bottom: 20rpx;
}

.express-status {
  padding: 30rpx;
  font-size: 24rpx;
}

.reach-yet:before {
  margin-right: 20rpx;
}

.goods-detail-wrap {
  margin-left: 37rpx;
  display: flex;
  flex-direction: column;
  width: 360rpx;
}

.goods-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 18rpx;
  line-height: 26rpx;
  height: 52rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.order-detail {
  display: flex;
  padding: 30rpx 30rpx 30rpx 0;
  margin-left: 30rpx;
  border-bottom: 1px solid #eaeaea;
}

.order-detail image {
  width: 100rpx;
  height: 100rpx;
}

.goods-detail {
  font-size: 20rpx;
  color: #919191;
  white-space: nowrap;
}

.goods-detail span {
  margin-right: 18rpx;
}

.goods-price {
  font-size: 24rpx;
  color: #333;
  flex-grow: 1;
  text-align: right;
}

.distribute-wrap {
  line-height: 88rpx;
  font-size: 26rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-left: 0;
}

.moneyDetail{
  padding: 14rpx 30rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 210rpx;
  background: #fff;
  margin-top: 20rpx;
  box-sizing: border-box;
}
.moneyDetail view{
  display: flex;
  justify-content: space-between
}
