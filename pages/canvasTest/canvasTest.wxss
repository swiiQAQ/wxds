/* pages/canvasTest/canvasTest.wxss */
image{
  width: 150rpx;
  height: 150rpx;
}
.select-wrap{
  padding: 20rpx 30rpx 130rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: 1px solid #eaeaea;
  position: relative
}
.gallery-list{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap
}
.img-wrap{
  display: inline-block;
  position: relative;
  background: #f7f7f9;
  margin-top: 20rpx;
}
.selected-icon{
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  background: #eb3c19;
  color: #fff;
  text-align: center;
  line-height: 42rpx;
  display: inline-block;
  position: absolute;
  right: 5rpx;
  bottom: 5rpx;
  font-size: 30rpx;
  z-index: 3
}

.goods-info{
  background: #fff;
  color: #454545;
  border-bottom: 1px solid #eaeaea;
}
.goods-info p{
  line-height: 80rpx;
  font-size: 30rpx;
  margin: 0 30rpx;
  border-bottom: 1px solid #eaeaea;
  width: 100%;
  font-weight: 600;
  display: flex;
}
.product-name{
  margin-bottom: 10rpx;
  line-height: 40rpx;
  font-weight: 600;
}
.goods-detail{
  font-size: 24rpx;
  margin: 0 30rpx;
  padding: 25rpx 0;
}
.goods-detail text{
  display: block;
}
.price-wrap{
  line-height: 80rpx;
  height: 80rpx;
  background: #fff;
  padding-left: 30rpx;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  position: relative;
  margin: 20rpx 0;
}
.seller-price{
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}
.origin-price{
  font-size: 22rpx;
  color: #454545;
  margin-left: 15rpx;
}
.edit{
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #eb3c19;
  border: 1px solid #eb3c19;
  border-radius: 100rpx;
  display: inline-block;
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -20rpx
}
.select-text{
  font-size: 24rpx;
  font-weight: 400;
  margin-right: 15rpx;
}
.select-count{
  color: #eb3c19;
  font-size: 24rpx;
}
.selected-mask{
  position: absolute;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.2);
  z-index:2;
}

/* sticky-bottom */
.sticky-bottom{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  position: fixed;
  bottom: 0;
  z-index: 100;
  background: #fff;
  border-top: 1px solid #eaeaea;
  display: flex;
  align-items: center;
}
.sticky-bottom text{
  font-size: 24rpx;
  width: 120rpx;
  text-align: center;
}
.sticky-bottom button{
  font-size: 36rpx;
  width: 250rpx;
  height: 85rpx;
  margin-right: 20rpx;
}

/* mask */
.mask{
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.2);
  z-index: 200;
  display: none;
  position: fixed;
}
.canvasPreview{
  width: 555rpx;
  height: 1000rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  overflow: hidden;
  align-items: center;
  margin: 40rpx auto;
}
.show{
  display: flex!important;
}
.save-text{
  color: #eb3c19;
  font-size: 36rpx;
  text-align: center;
  border-top: 1px solid #eaeaea;
  line-height: 88rpx;
  width: 100%;
}

/* edit-panel */
.half-mask{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.2);
  z-index: 200;
  display: none;
}
.edit-panel{
  height:170rpx;
  display:none;
  z-index:999;
  position:absolute;
  background:#fff;
  margin-top: -20rpx;
  padding-left: 30rpx;
  border-bottom: 1px solid #eaeaea;
}
.edit-panel input{
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1px solid #eaeaea;
  font-size: 34rpx;
}
.wish-add{
  color: #b2b2b2;
  font-size: 24rpx;
}
.add-amount-wrap{
  height: 90rpx;
  display: flex;
  align-items: center;
}
.add-amount-wrap text{
  width: 101rpx;
  height: 50rpx;
  background: #fff;
  color: #eb3c19;
  font-size: 24rpx;
  border: 1px solid #eb3c19;
  border-radius: 4rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
  text-align: center;
  line-height: 50rpx;
}
.add-amount-wrap .current-add{
  background: #eb3c19;
  color: #fff;
}
.confirm-add{
  width: 130rpx;
  height: 170rpx;
  background: #eb3c19;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 170rpx;
}