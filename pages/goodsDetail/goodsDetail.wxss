page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.goods-detail{
  flex-grow: 1;
}
.gallerySwiperWrap {
  position: relative;
}

.gallerySwiper {
  width: 100%;
  height: 750rpx;
  position: relative;
}

.gallerySwiper image {
  width: 100%;
  height: 750rpx;
}

.gallerySwiper image.sold-out:first-child{
  opacity: 0.4;
}

.gallerySwiperWrap .galleryPagination {
  width: 100rpx;
  height: 48rpx;
  background: #888;
  border-radius: 6rpx;
  position: absolute;
  top: 88%;
  left: 82%;
  color: #fff;
  font-size: 26rpx;
  line-height: 48rpx;
  text-align: center;
}
/* 售罄遮盖 */
.swiper-wrap.sold-out{
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  font-size: 48rpx;
  color: #000;
  justify-content: center;
  align-items: center;
  left: 0;
  top: 0;
}
.sold-out-text{
  position: relative;
  text-align: center
}
.sold-out-text::after{
  content: '';
  position: absolute;
  bottom: -20rpx;
  width: 106rpx;
  height: 5rpx;
  background: #000;
  left: 50%;
  margin-left: -53rpx;
}

/* 粘性底部 */
.sticky-bottom{
  height: 110rpx;
  display: flex;
  padding-left: 42rpx;
  align-items: center;
  flex-grow: 0;
}
.service:before,.cart:before{
  font-size: 42rpx;
}
.icon-wrap{
  display: flex;
  flex-direction: column;
  color: #7f8389;
  margin-right: 40rpx;
  justify-content: center;
  align-items: center;
}
.icon-wrap text{
  font-size: 20rpx;
}
.add-to-cart.sold-out{
  opacity: 0.4
}
.buy.sold-out{
  opacity: 0.2
}


.product-info{
  display: flex;
  flex-direction: column;
  padding: 30rpx 33rpx 0;
  background: #fff;
  border-bottom: 1px solid #eaeaea;
}
.product-info .brand-name{
  color: #919191;
  font-size: 20rpx;
}
.product-info .product-name{
  margin-top: 25rpx;
  margin-bottom: 13rpx;
  color: #454545;
  font-size: 30rpx;
}
.product-info .price-wrap{
  display: flex;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eaeaea;
  align-items: center;
}
.price-wrap .sales-price{
  color: #454545;
  font-size: 34rpx;
}
.price-wrap .market-price{
  margin-left: 20rpx;
  color: #919191;
  font-size: 24rpx;
  text-decoration: line-through
}
.select-attr{
  height: 68rpx;
  font-size: 24rpx;
  color: #454545;
  position: relative;
  display: flex;
  align-items: center;
}
.select-attr::after{
  content: '';
  border-top: 1px solid #454545;
  border-right: 1px solid #454545;
  transform: rotate(-45deg);
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 30rpx;
}
#tuwen,#productTextInfo{
  padding: 0 40rpx;
  background: #fff;
}
#tuwen image,#productTextInfo image{
  width: 100%;
}


.productTextInfo b {
  font-weight: 800;
}

.productTextInfo text, span, b {
  font-size: 26rpx;
}
