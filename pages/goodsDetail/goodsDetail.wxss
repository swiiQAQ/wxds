.sizeTable{
  font-size: 26rpx;
  display: flex;
}
.sizeTable .sizeColumn{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  text-align: center;
}
.sizeColumn .sizeItem{
  border: 1px solid #eaeaea;
  line-height: 46rpx;
}
/* detail-ct */
.detail-ct{
  background: #fff;
  margin-top: 20rpx;
}
.detail-ct .ct-text{
  display: flex;
  padding: 0 40rpx;
  box-sizing: border-box;
  align-items: center;
  height: 78rpx;
}
.detail-ct .ct-text text{
  flex-grow: 1;
  font-size: 28rpx;
  color: #919191;
  text-align: center;
}
.detail-ct .ct-text text.active{
  color: #eb3c19;
  border-bottom: 8rpx solid #eb3c19;
}
/* sticky-bottom */
.add-to-cart,.buy{
  width: 250rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 36rpx;
  border-radius: 5px;
}
.add-to-cart{
  color: #eb3c19;
  border: 1px solid #eb3c19;
  margin-right: 10rpx;
}
.buy{
  background: #eb3c19;
  color: #fff;
}


/* 选择尺码弹窗 */
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
  display: none;
}
.mask.show{
  display: block
}
.hidden{
  display: none;
}
