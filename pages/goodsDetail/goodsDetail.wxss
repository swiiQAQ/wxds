.overlay{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 700rpx;
  background: #fff;
}
.overlay-top{
  padding-left: 37rpx;
  right: 14rpx;
  background: #fff;
  height: 180rpx;
  border-bottom: 1px solid #eaeaea;
  display: flex;
  box-sizing: border-box;
  align-items: center;
}
.overlay-top .sku-img{
  width: 150rpx;
  height: 150rpx;
}
.overlay-top .sku-info{
  margin-left: 20rpx;
}
.overlay-top .sku-info em,.sku-info b{
  font-size: 26rpx;
}

.sku-info text{
  width: 450rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 30rpx;
  color: #454545;
}
.overlay_center{
  padding: 40rpx 30rpx;
  background: #fff;
  height: 400rpx;
  width: 100%;
  box-sizing: border-box;
}
.overlay_center em{
  font-size: 24rpx;
  width: 83rpx;
  margin-top: 15rpx;
  flex-shrink: 0;
}
.sizeWrap,.colorWrap{
  flex-wrap: wrap;
  align-content: space-between;
  /* justify-content: space-between; */
  justify-content: flex-start;
}
.sizeBox,.colorBox{
  /* min-width: 134rpx; */
  width: 150rpx;
  height: 60rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  border: 1px solid #a2a2a2;
  text-align: center;
  border-radius: 10rpx;
  margin-bottom: 24rpx;
  /* padding: 0 20rpx; */
  box-sizing: border-box;
  margin-right: 12rpx;
  display: inline-block;
  color: #a2a2a2;
}
.selectSize,.selectColor{
  /* border: 1px solid #CC0000; */
  background: #eb3c19;
  color: #fff!important;
  border:1px solid #eb3c19;
}
.size-select-box,.color-select-box,.amount-select-box{
  display: flex;
}
.size-select-box span,.color-select-box span{
  font-size: 22rpx;
  color: #888;
}
.disabled{
  border: 1px solid #ccc;
  color: #ccc;
  pointer-events: none;
}
.clear::before{
  font-size: 36rpx;
  color: #E1E1E1;
  position: absolute;
  right: 14rpx;
  top: 20rpx;
}
.amount-select-box input{
  width: 150rpx;
  color: #a2a2a2;
  height: 50rpx;
  border-top: 1px solid #a2a2a2;
  border-bottom: 1px solid #a2a2a2;
  box-sizing: border-box;
  text-align: center;
  font-size: 32rpx;
}
.amount-select-box view{
  display: flex;
}
.amount-select-box span{
  width: 50rpx;
  background: #D7D7D7;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
}