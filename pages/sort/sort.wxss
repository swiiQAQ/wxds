@import '../template/searchBar.wxss';
page{
  height:100%;
  display:flex;
  flex-direction:column;
}
.sort-panel{
  display: flex;
  /* flex-grow: 1; */
  background: #f7f7f7;
}
.first-category, .first-scroll{
  width: 178rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
}
.second-scroll{
  /* flex-grow: 1; */
  height: 100%;
  background: #fff;
}
.first-category li{
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 28rpx;
  background: #f7f7f7;
  border-bottom: 1px solid #eaeaea;
  border-right: 1px solid #eaeaea;
  font-size: 28rpx;
  box-sizing: border-box;
}
.first-category li.active{
  border-left: 6rpx solid #eb3c19;
  color: #eb3c19;
  padding-left: 24rpx;
}
.second-category{
  margin-left: 20rpx;
  padding-top: 10rpx;
}
.second-category view{
  margin-top: 10rpx;
}
.second-cate-name{
  font-size: 28rpx;
  color: #454545;
  margin-top:10rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #eb3c19;
}
.third-cate-wrap{
  display: flex;
  flex-wrap: wrap;
}
.third-cate-grid{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #919191;
  font-size: 24rpx;
  margin: 20rpx 23rpx 0 23rpx;
}
.third-cate-grid image{
  width: 136rpx;
  height: 136rpx;

}