/* components/goodsListPanel/goodsListPanel.wxss */
.goodsListFlexBox {
display: flex;
flex-direction: row;
flex-wrap: wrap;
justify-content: space-between;
width: 100%;
box-sizing: border-box;
padding: 0 30rpx;
}
.block-list .flex-item{
display: flex;
flex-direction: column;
width: 330rpx;
height: 547rpx;
}
.goodsListFlexBox image {
width: 330rpx;
height: 400rpx;
}
.goodsListFlexBox text {
color: #919191;
font-size: 22rpx;
}
.goodsListFlexBox .salesPrice {
font-weight: 800;
font-size: 24rpx;
color: #454545;
margin-right: 35rpx;
}
.goodsListFlexBox .marketPrice {
text-decoration: line-through;
font-size: 24rpx;
color: #919191;
}
.goodsListFlexBox .discount{
  width: 88rpx;
  height: 30rpx;
  display: inline-block;
  background: #eb3c19;
  color: #fff;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 4px;
  margin-left: 20rpx;
}
.goodsListFlexBox .product-name{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 24rpx;
  color: #454545;
}


/* 行级排列 */
.line-list .flex-item{
 height: 220rpx; 
 width: 100%;
 display: flex;
 padding-left: 30rpx;
 box-sizing: border-box;
}
.line-list image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.line-list .list-info{
  display: flex;
  flex-direction: column;
}
.line-list .discount{
  margin-bottom: 20rpx;
}
.line-list .brandName{
  margin-bottom: 14rpx;
}
